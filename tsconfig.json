{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    // "lib": [],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./node_modules", "./dist", "./example"],
  "include": ["./src/**/*.ts"]
}
